%h2 
	Editting 
	= @assignment.name

= form_for @assignment, url: assignment_path(@assignment), method: :patch do |f|
	- if @assignment.errors.any?
		%div#error_explanation
			%h2
				= pluralize(@assignment.errors.count, "error")
				prohibited this assignment from being saved:
			%ul
				- @assignment.errors.full_messages.each do |msg|
					%li
						= msg
	%p 
		= f.label :name
		%br/
		= f.text_field :name
	%p
		= f.label :due_date
		%br/
		= f.date_select :due_date
	%p
		= f.label :assn_type
		%br/
		= f.select :assn_type, [["Extra Credit", 1],["Homework", 2],["Major Homework", 3],["Project", 4],["Exam", 5]]
	%p
		= f.label :percent_done
		%br/
		= f.text_field :percent_done
	%p
		= f.submit
	= link_to 'Back', assignments_path